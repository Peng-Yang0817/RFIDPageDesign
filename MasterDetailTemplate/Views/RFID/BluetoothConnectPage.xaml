<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterDetailTemplate.Views.RFID.BluetoothConnectPage"
             Title="Bluetooth Connect">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">

                <!-- Bluetooth Device List -->
                <Frame BackgroundColor="#F0F0F0" CornerRadius="10" Margin="0, 10, 0, 10">
                    <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
                        <Label Text="藍芽裝置列表" FontSize="20" HorizontalOptions="CenterAndExpand" TextColor="#333333" />
                        <!-- Here you can display the list of Bluetooth devices -->
                    </StackLayout>
                </Frame>

                <!-- Bluetooth Connection Status -->
                <Frame BackgroundColor="#F0F0F0" CornerRadius="10" Margin="0, 10, 0, 10">
                    <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
                        <Label Text="藍芽連接狀態" FontSize="20" HorizontalOptions="CenterAndExpand" TextColor="#333333" />
                        <!-- Here you can display the Bluetooth connection status -->
                    </StackLayout>
                </Frame>

                <!-- Bluetooth Connection Controls -->
                <Frame BackgroundColor="#F0F0F0" CornerRadius="10" Margin="0, 10, 0, 10">
                    <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
                        <Label Text="藍芽連接控制" FontSize="20" HorizontalOptions="CenterAndExpand" TextColor="#333333" />
                        <!-- Here you can add buttons or controls to manage Bluetooth connections -->
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>